{
  "manifest_version": 2,

  "name": "Sci-Hub-Fy",
  "description": "Free access to scientific articles through sci-hub.io service.",
  "version": "1.3",

  "permissions": [
     "activeTab",
     "tabs",
     "contextMenus",
     "storage"
  ],

  "icons": {
    "19": "icon.png",
    "128": "icon_store.png"
  },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
